<form class="clearfix mb-4" action="POST">
    <div class="form-group">
        <label for="user-firstname">First Name</label>
        <input type="text" id="user-firstname" class="form-control" aria-describedby="user-firstname" placeholder="John">
    </div>
    <div class="form-group">
        <label for="user-lastname">Last Name</label>
        <input type="text" id="user-lastname" class="form-control" aria-describedby="user-lastname" placeholder="John">
    </div>
    <div class="form-group">
        <label for="user-homeaddress1">Home Address</label>
        <input type="text" id="user-homeaddress1" class="form-control" aria-describedby="user-homeaddress1" placeholder="John">
    </div>
    <div class="form-group">
        <label for="user-homeaddress2">Address line 2</label>
        <input type="text" id="user-homeaddress2" class="form-control" aria-describedby="user-homeaddress2" placeholder="John">
    </div>
    <div class="form-group">
        <label for="user-homecity">City</label>
        <input type="text" id="user-homecity" class="form-control" aria-describedby="user-homecity" placeholder="John">
    </div>
    <div class="form-group">
        <label for="user-homestate">State</label>
        <input type="text" id="user-homestate" class="form-control" aria-describedby="user-homestate" placeholder="John">
    </div>
    <div class="form-group">
        <label for="user-homezipcode">Zip Code</label>
        <input type="text" id="user-homezipcode" class="form-control" aria-describedby="user-homezipcode" placeholder="John">
    </div>
    <div class="form-group">
        <label for="user-petname">Pet Name</label>
        <input type="text" id="user-petname" class="form-control" aria-describedby="user-petname" placeholder="John">
    </div>
    <div class="form-group">
        <label for="user-creditnum">Credit Card Number</label>
        <input type="text" id="user-creditnum" class="form-control" aria-describedby="user-creditnum" placeholder="John">
    </div>
    <button id="submit" class="btn btn-primary float-right">Login</button>
</form>